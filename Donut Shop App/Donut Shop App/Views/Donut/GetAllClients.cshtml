@model List<Donut_Shop_App.Models.Client>
@{
    ViewBag.Title = "GetAllClients";
}

<h2>Clients:</h2>
<ul>
    @{
        int i = 0;
        foreach (var client in Model) { 
        <li>
            @Html.ActionLink(client.Name, "ShowClients", new { id = i }) |
            @Html.ActionLink("Edit", "EditClient", new { id = i }) |
            @Html.ActionLink("Delete", "DeleteClient", new { id = i })
         </li>
            i++;
        }

    }
</ul>

